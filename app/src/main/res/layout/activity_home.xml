<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:letterSpacing="0.02"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textColor="@color/error"
            app:layout_constraintTop_toTopOf="@id/tvHomeTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvHomeTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvWelcomeMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvHomeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Upload Clothes Card - Teal Gradient -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUploadClothes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/bg_gradient_teal"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcomeMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvUploadIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="ðŸ“¸"
                    android:textSize="32sp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvUploadTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_clothes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/tvUploadIcon"
                    app:layout_constraintStart_toEndOf="@id/tvUploadIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tvUploadDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add new items to your wardrobe"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    app:layout_constraintTop_toBottomOf="@id/tvUploadTitle"
                    app:layout_constraintStart_toStartOf="@id/tvUploadTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- My Wardrobe Card - Purple Gradient -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMyWardrobe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/bg_gradient_purple"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardUploadClothes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvWardrobeIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="ðŸ‘”"
                    android:textSize="32sp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvWardrobeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_wardrobe"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/tvWardrobeIcon"
                    app:layout_constraintStart_toEndOf="@id/tvWardrobeIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tvWardrobeDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="View and manage your clothing items"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    app:layout_constraintTop_toBottomOf="@id/tvWardrobeTitle"
                    app:layout_constraintStart_toStartOf="@id/tvWardrobeTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Get Suggestions Card - Primary Gradient -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGetSuggestions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/bg_gradient_primary"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardMyWardrobe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvSuggestionsIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="âœ¨"
                    android:textSize="32sp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvSuggestionsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/get_suggestions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/tvSuggestionsIcon"
                    app:layout_constraintStart_toEndOf="@id/tvSuggestionsIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tvSuggestionsDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="AI-powered outfit matching based on color &amp; style"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/tvSuggestionsTitle"
                    app:layout_constraintStart_toStartOf="@id/tvSuggestionsTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AI Suggestions Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAISuggestions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/bg_gradient_teal"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardGetSuggestions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvAISuggestionsIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="ðŸ¤–"
                    android:textSize="32sp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvAISuggestionsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="AI Personal Stylist"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/tvAISuggestionsIcon"
                    app:layout_constraintStart_toEndOf="@id/tvAISuggestionsIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tvAISuggestionsDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Get personalized outfit suggestions with photo analysis"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    app:layout_constraintTop_toBottomOf="@id/tvAISuggestionsTitle"
                    app:layout_constraintStart_toStartOf="@id/tvAISuggestionsTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Features Section -->
        <TextView
            android:id="@+id/tvFeaturesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@id/cardAISuggestions"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/tvFeature1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â€¢ Color-based outfit matching"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvFeaturesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvFeature2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â€¢ Style compatibility analysis"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvFeature1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvFeature3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â€¢ Personalized wardrobe management"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvFeature2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


